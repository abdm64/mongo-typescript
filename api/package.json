{
  "name": "api-get-drive",
  "version": "1.0.0",
  "description": "crud api for getdrive assigment ",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc  --noEmitOnError --watch\" \"nodemon  dist/index.js\"",
    "prestart": "npm run build",
    "start": " node dist/index.js",
    "test:watch": " rimraf dist && jest --watchAll --passWithNoTests",
    "test": "rimraf dist && jest --collectCoverage"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ]
  },
  "keywords": [
    "express",
    "mongoose"
  ],
  "author": "abdm64",
  "license": "MIT ",
  "dependencies": {
    "@types/config": "^0.0.39",
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "http-status-codes": "^2.1.4",
    "mongoose": "^5.13.3",
    "rimraf": "^2.7.1",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/mongoose": "^5.11.97",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^6.2.0",
    "jest": "^27.0.6",
    "mongodb-memory-server": "^7.3.4",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
